<!-- this is the sign_in.handlebars file inside the login folder of the views folder
views/login/sign_in.handlebars -->
<div class="container">
    <div class="row text-center pad-top " id="pad-top">
        <div class="col-md-12" id="text-1">
            <h1>Login to gain access</h1>
        </div>
    </div>
    <div class="row  pad-top">
        <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <strong> Login: </strong>
                </div>
                <div class="panel-body">

                    <form class="create-update-form" action="sign-in" method="POST" id="login-form">

                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input type="text" id="email" name="email">
                        </div>

                        <div class="form-group">
                            <label for="password">Password:</label>
                            <input type="password" id="password" name="password">
                        </div>

                        <button type="submit" class="submit">Sign In</button>
                    </form>

                </div>
            </div>
        </div>

    </div>
</div>

<script type="text/javascript" src="assets/javascript/login.js"></script>